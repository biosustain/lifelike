#!/bin/sh

# Runs linting on only files that are staged
staged_files=$(getStaged appserver '\.(py)$')

echo "> ğŸ¥§ Running mypy..."
echo ${staged_files} | xargs docker exec cache-invalidator mypy
echo "> ğŸ Running pycodestyle..."
echo ${staged_files} | xargs docker exec cache-invalidator pycodestyle
