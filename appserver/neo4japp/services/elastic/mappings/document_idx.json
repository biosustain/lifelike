{
    "settings": {
        "analysis": {
            "analyzer": {
              "filename_analyzer": {
                "tokenizer": "standard",
                "filter": ["lowercase"],
                "char_filter": [
                  "replace_dot"
                ]
              },
              "filepath_analyzer": {
                  "tokenizer": "filepath_tokenizer"
              },
              "default": {
                  "type": "standard"
              }
            },
            "tokenizer": {
                "filepath_tokenizer": {
                    "type": "path_hierarchy"
                  }
            },
            "char_filter": {
              "replace_dot": {
                "type": "pattern_replace",
                "pattern": "\\.",
                "replacement": " "
              }
            }
        },
        "highlight": {
            "max_analyzed_offset": "100000000"
        }
    },
    "mappings": {
        "properties": {
            "filename": {
                "type": "text",
                "analyzer": "filename_analyzer"
            },
            "filepath": {
                "type": "text",
                "analyzer": "filepath_analyzer"
            },
            "description": {
                "type": "text"
            },
            "uploaded_date": {
                "type": "date"
            },
            "user_id": {
                "type": "integer"
            },
            "username": {
                "type": "keyword"
            },
            "project_id": {
                "type": "integer"
            },
            "project_hash_id": {
                "type": "keyword"
            },
            "project_name": {
                "type": "text"
            },
            "doi": {
                "type": "keyword"
            },
            "public": {
                "type": "boolean"
            },
            "id": {
                "type": "integer"
            },
            "hash_id": {
                "type": "keyword"
            },
            "mime_type": {
                "type": "keyword"
            },
            "data_ok": {
                "type": "boolean"
            }
        }
    }
}
