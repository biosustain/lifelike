{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "directed",
    "multigraph",
    "graph",
    "nodes",
    "links"
  ],
  "properties": {
    "directed": {
      "type": "boolean"
    },
    "multigraph": {
      "type": "boolean"
    },
    "graph": {
      "type": "object",
      "additionalProperties": true
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "name": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "id": {
            "type": "number"
          },
          "displayName": {
            "type": "string"
          }
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "source": {
            "type": "number"
          },
          "target": {
            "type": "number"
          },
          "pageUp": {
            "type": "number"
          }
        }
      }
    }
  }
}
