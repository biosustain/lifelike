{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "rects",
        "type",
        "idHyperlink",
        "pageNumber",
        "comment",
        "reason",
        "excludeGlobally",
        "id",
        "text",
        "user_id",
        "exclusion_date"
    ],
    "definitions": {
        "safeUrlOrBlank": {
            "type": "string",
            "minLength": 0,
            "maxLength": 4000,
            "pattern": "(?i)^(https?://.+|mailto:.+)?$",
            "$comment": "changing this may have defense-in-depth security implications"
        }
    },
    "properties": {
        "rects": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "number"
                }
            }
        },
        "type": {
            "type": "string"
        },
        "idHyperlink": {
            "$ref": "#/definitions/safeUrlOrBlank"
        },
        "pageNumber": {
            "type": "integer"
        },
        "comment": {
            "type": "string"
        },
        "reason": {
            "type": "string"
        },
        "excludeGlobally": {
            "type": "boolean"
        },
        "id": {
            "type": "string"
        },
        "text": {
            "type": "string"
        },
        "user_id": {
            "type": "integer"
        },
        "exclusion_date": {
            "type": "string",
            "$comment": "We could potentially make the format more strict here"
        }
    }
}