{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "meta",
        "keywords",
        "rects",
        "pageNumber",
        "inclusion_date",
        "user_id",
        "uuid"
    ],
    "definitions": {
        "hexColor": {
            "type": "string",
            "minLength": 4,
            "maxLength": 7,
            "pattern": "#.+",
            "$comment": "Assumes we can use shorthand for hex colors"
        },
        "safeUrl": {
            "type": "string",
            "minLength": 1,
            "maxLength": 4000,
            "pattern": "(?i)^(https?://.+|mailto:.+)$",
            "$comment": "changing this may have defense-in-depth security implications"
        },
        "safeUrlOrBlank": {
            "type": "string",
            "minLength": 0,
            "maxLength": 4000,
            "pattern": "(?i)^(https?://.+|mailto:.+)?$",
            "$comment": "changing this may have defense-in-depth security implications"
        }
    },
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "color": {
                    "$ref": "#/definitions/hexColor"
                },
                "includeGlobally": {
                    "type": "boolean"
                },
                "isCustom": {
                    "type": "boolean"
                },
                "links": {
                    "type": "object",
                    "properties": {
                        "ncbi": {
                            "$ref": "#/definitions/safeUrl"
                        },
                        "uniprot": {
                            "$ref": "#/definitions/safeUrl"
                        },
                        "wikipedia": {
                            "$ref": "#/definitions/safeUrl"
                        },
                        "google": {
                            "$ref": "#/definitions/safeUrl"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "ncbi",
                        "uniprot",
                        "wikipedia",
                        "google"
                    ]
                },
                "idType": {
                    "type": "string"
                },
                "allText": {
                    "type": "string"
                },
                "primaryLink": {
                    "$ref": "#/definitions/safeUrlOrBlank"
                },
                "idHyperlink": {
                    "$ref": "#/definitions/safeUrlOrBlank"
                },
                "id": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            },
            "required": [
                "color",
                "includeGlobally",
                "isCustom",
                "links",
                "idType",
                "allText",
                "primaryLink",
                "idHyperlink",
                "id",
                "type"
            ],
            "additionalProperties": false
        },
        "keywords": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "rects": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "number"
                }
            }
        },
        "pageNumber": {
            "type": "integer"
        },
        "inclusion_date": {
            "type": "string",
            "$comment": "We could potentially make the format more strict here"
        },
        "user_id": {
            "type": "integer"
        },
        "uuid": {
            "type": "string"
        }
    }
}