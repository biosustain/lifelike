#!/bin/sh

# Runs linting on only files that are staged

echo "> ğŸ¥§ Running mypy..."
git diff --cached --name-only | grep -E '\.(py)$' | sed 's/appserver\///g' | xargs docker exec appserver mypy
echo "> ğŸ Running pycodestyle..."
git diff --cached --name-only | grep -E '\.(py)$' | sed 's/appserver\///g' | xargs docker exec appserver pycodestyle

