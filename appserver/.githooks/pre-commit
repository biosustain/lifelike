#!/bin/sh

# Runs linting on only files that are staged

echo "> ğŸ¥§ Running mypy..."
git diff --cached --name-status | grep -E '(A\t|M\t|R100\t)' | grep -E '\.(py)$' | cut -f 2 | grep -E 'appserver' | sed 's/appserver\///g' | xargs docker exec appserver mypy
echo "> ğŸ Running pycodestyle..."
git diff --cached --name-status | grep -E '(A\t|M\t|R100\t)' | grep -E '\.(py)$' | cut -f 2 | grep -E 'appserver' | sed 's/appserver\///g' | xargs docker exec appserver pycodestyle

