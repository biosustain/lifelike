#!/bin/sh

# Runs linting on only files that are staged
staged_files=$(getStaged appserver '\.(py)$')

# Turn debugging on by the flag
if [[ -n $DEBUG_HOOKS ]];
then
  echo "> ðŸ› flake8 version:"
  docker exec appserver flake8 --version
  echo "> ðŸ› mypy version:"
  docker exec appserver mypy --version
  echo "> ðŸ› pycodestyle version:"
  docker exec appserver pycodestyle --version
fi

# shellcheck disable=SC2236
if [[ -n $staged_files ]];
then
  (
    echo "> ðŸŒ½ Running flake8..."
    echo ${staged_files} | xargs docker exec appserver flake8
  ) && (
    echo "> ðŸ¥§ Running mypy..."
    echo ${staged_files} | xargs docker exec appserver mypy
  ) && (
    echo "> ðŸ Running pycodestyle..."
    echo ${staged_files} | xargs docker exec appserver pycodestyle
  )
else
  echo "> Skipping..."
fi
