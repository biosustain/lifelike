#!/bin/sh
echo "> ðŸ§¶ Running yarn lint.."
__dir__="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
root_dir="$( cd "$( dirname "${__dir__}}" )" &> /dev/null && pwd )"

# Runs linting on only files that are staged
cd $root_dir && git diff --cached --name-only | grep -E '\.(js|ts)$' | sed 's/client\///g' | xargs printf -- '--files=%s\n' | xargs ng lint -- --tsConfig=tsconfig.json 2>/dev/null