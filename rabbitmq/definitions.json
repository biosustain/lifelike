{
    "vhosts":[
        {"name": "/"}
    ],
    "users": [
        { "name": "__ADMIN_USERNAME__", "password": "__ADMIN_PASSWORD__", "tags": "administrator" },
        { "name": "__MESSENGER_USERNAME__", "password": "__MESSENGER_PASSWORD__", "tags": "" }
    ],
    "permissions":[
        { "user": "admin", "vhost": "/", "configure": ".*", "write": ".*", "read": ".*" }
    ],
    "queues": [
        {
            "name": "dl",
            "vhost": "/",
            "durable": true,
            "auto_delete": false,
            "arguments": {
                "x-queue-type": "classic"
            }
        },
        {
            "name": "annotator",
            "vhost": "/",
            "durable": true,
            "auto_delete": false,
            "arguments": {
                "x-queue-type": "classic",
                "x-dead-letter-exchange": "dlx",
                "x-dead-letter-routing-key" : "dl",
                "x-message-ttl": 900000
            }
        },
        {
            "name": "post_annotator",
            "vhost": "/",
            "durable": true,
            "auto_delete": false,
            "arguments": {
                "x-queue-type": "classic",
                "x-dead-letter-exchange": "dlx",
                "x-dead-letter-routing-key" : "dl",
                "x-message-ttl": 900000
            }
        }
    ],
    "exchanges": [
        {
            "name": "dlx",
            "vhost": "/",
            "type": "direct",
            "durable": true,
            "auto_delete": false,
            "internal": false,
            "arguments": {}
        }
    ],
    "bindings": [
        {
            "source": "dlx",
            "vhost": "/",
            "destination": "dl",
            "destination_type": "queue",
            "routing_key": "dl",
            "arguments": {}
        }
      ]
}
